<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".activity.DangNhapActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/paddingtieude"
            android:text="Phần mềm bán sách online"
            android:textColor="@color/design_default_color_error"
            android:textSize="@dimen/tieude"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="@dimen/paddingtieude"
            android:text="Đăng Nhập"
            android:textColor="@color/black"
            android:textSize="@dimen/tieudesize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:weightSum="10">
            >

            <RadioButton
                android:id="@+id/layoutDN_rdbNhanVien"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Nhân viên"
                android:textSize="@dimen/textsize" />

            <RadioButton
                android:id="@+id/layoutDN_rdbKhachHang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:maxLines="1"
                android:text="Khách hàng"
                android:textSize="@dimen/textsize" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal"
        android:weightSum="12">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Tài khoản"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize" />

        <EditText
            android:id="@+id/layoutDN_edtTaiKhoan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/marginleft"
            android:layout_weight="8.5"
            android:background="@drawable/border"
            android:gravity="center"
            android:hint="Nhập tài khoản"
            android:textSize="@dimen/textsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal"
        android:weightSum="12">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Mật khẩu"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize"
            tools:ignore="NestedWeights" />

        <EditText
            android:id="@+id/layoutDN_edtNhapMatKhau"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/marginleft"
            android:layout_weight="8.5"
            android:background="@drawable/border"
            android:gravity="center"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:textSize="@dimen/textsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margintop"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:weightSum="12"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="Chưa có tài khoản?"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/layoutDN_btnDangKy"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:text="Đăng ký"
            android:textColor="@color/blue"
            android:textSize="@dimen/textsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margintop"
        android:layout_weight="0.75"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <Button
            android:id="@+id/layoutDN_bntDangNhap"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:text="Đăng nhập"
            tools:ignore="NestedWeights" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margintop"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="12">

        <CheckBox
            android:id="@+id/layoutDN_cbNhoMatKHau"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:checked="false"
            android:text="Nhớ mật khẩu"
            android:textSize="@dimen/textsize"
            tools:ignore="NestedWeights" />

        <Button
            android:id="@+id/layoutDN_btnQuenMatKhau"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:text="Quên mật khẩu"
            android:textColor="@color/blue"
            android:textSize="@dimen/textsize"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>