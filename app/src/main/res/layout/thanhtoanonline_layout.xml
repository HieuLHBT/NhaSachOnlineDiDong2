<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.ThanhToanOnlineActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center">
        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toán trả trước"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_error"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Thông tin chuyển khoản"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/marginleft"
            android:layout_weight="0.8">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="Tên chủ tài khoản:"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/layoutTTTT_tvTenChuTaiKhoan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.6"
                android:gravity="center|left"
                android:text="Trương Đình Thọ"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/marginleft"
            android:layout_weight="0.8">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="Số điện thoại:"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/layoutTTTT_tvSoDienThoai"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.8"
                android:gravity="center|left"
                android:text="0368688888"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/marginleft"
            android:layout_weight="0.8">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.4"
                android:gravity="center|left"
                android:text="Số TK ngân hàng:"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/layoutTTTT_tvSoTaiKhoan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.2"
                android:gravity="center|left"
                android:text="0382000477885"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/marginleft"
            android:layout_weight="0.8">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="Tên ngân hàng:"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/layoutTTTT_tvTenNganHang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="center|left"
                android:text="Vietcombank"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/marginleft"
            android:layout_weight="0.8">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.8"
                android:gravity="center|left"
                android:text="Tổng tiền thanh toán:"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/layoutTTTT_tvTienThanhToan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.8"
                android:gravity="center|left"
                android:text="300.000 VNĐ"
                android:textSize="@dimen/textsize"
                android:textColor="@color/tien">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|left"
            android:layout_weight="1">
            <TextView
                android:id="@+id/layoutThanhToanOnline_tvNoiDungThanhToan"
                android:layout_margin="@dimen/marginleft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Nội dung thanh toán: Mã hóa đơn hàng + Tên KH + SĐT"
                android:textSize="25dp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center">
            <Button
                android:id="@+id/layoutThanhToanOnline_btnBack"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="Trở về"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>