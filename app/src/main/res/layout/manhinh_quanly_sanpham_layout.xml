<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.ManHinhQuanLySanPhamActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/layoutMHQLSP_btnBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:paddingLeft="15dp"
            android:text="@string/tvtrove"
            android:textSize="50dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="QUẢN LÝ SẢN PHẨM"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/layoutMHQLNV_btnThemNhanVien"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:paddingLeft="15dp"
            android:text="+"
            android:textSize="50dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:layout_margin="15dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="2.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Sản Phẩm:"
                android:textSize="17dp"
                android:textAlignment="center"
                android:textStyle="bold">

            </TextView>
            <Spinner
                android:id="@+id/layoutMHQLSP_spLoaiSanPham"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="4.5"
                />
            <Button

                android:layout_marginLeft="20dp"
                android:layout_weight="3.2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Nhập">

            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="10">
            <Spinner
                android:id="@+id/layoutMHQLSP_spSanPham"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                />
            <androidx.appcompat.widget.SearchView
                android:layout_weight="4"
                android:id="@+id/layoutMHQLSP_swTimKiem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/search_view_bg"
                app:iconifiedByDefault="false"
                app:queryHint="Nhập tên sản phẩm " />
            <Button
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Tìm Kiếm">

            </Button>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/layoutMHQLSP_rvDanhSachSanPham"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>



</LinearLayout>