<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".activity.SuaNhanVienActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/MHSNV_txtQuayLai"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tvtrove"
            android:textSize="@dimen/minh_text_title"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:text="SỬA NHÂN VIÊN"
            android:textSize="@dimen/minh_text_title"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_marginBottom="@dimen/marginbot">
        <ImageView
            android:id="@+id/MHSNV_imgHinhNhanVien"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/nhanvien1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingStart="@dimen/padding_them_nhan_vien_left"
                android:text="Mã NV"
                android:textSize="@dimen/text_them_nhan_vien"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/MHSNV_edtMaNhanVien"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/border"
                android:hint="NV004"
                android:inputType="none"
                android:paddingStart="@dimen/padding_them_nhan_vien_left"
                android:textSize="@dimen/textsizelight"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingStart="@dimen/padding_them_nhan_vien_left"
                android:text="Chức vụ"
                android:textSize="@dimen/text_them_nhan_vien"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/MHSNV_edtChucVu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/border"
                android:hint="Nhân viên"
                android:paddingStart="@dimen/padding_them_nhan_vien_left"
                android:textSize="@dimen/text_them_nhan_vien"
                android:textStyle="bold"
                android:inputType="none"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingStart="@dimen/padding_them_nhan_vien_left"
                android:text="Tên NV"
                android:textSize="@dimen/text_them_nhan_vien"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/MHSNV_edtTenNhanVien"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/border"
                android:hint="Jwon"
                android:paddingStart="@dimen/padding_them_nhan_vien_left"
                android:textSize="@dimen/text_them_nhan_vien"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingStart="@dimen/padding_them_nhan_vien_left"
                android:text="Tài khoản"
                android:textSize="@dimen/text_them_nhan_vien"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/MHSNV_edtTaiKhoanNhanVien"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/border"
                android:hint="jwonid"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/padding_them_nhan_vien_left"
                android:textSize="@dimen/text_them_nhan_vien"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingStart="@dimen/padding_them_nhan_vien_left"
                android:text="Mật khẩu"
                android:textSize="@dimen/text_them_nhan_vien"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/MHSNV_edtMatKhauNhanVien"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/border"
                android:hint="jwon123"
                android:paddingStart="@dimen/padding_them_nhan_vien_left"
                android:textSize="@dimen/text_them_nhan_vien"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingStart="@dimen/padding_them_nhan_vien_left"
                android:text="Email"
                android:textSize="@dimen/text_them_nhan_vien"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/MHSNV_edtEmailNhanVien"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/border"
                android:hint="jwon@gmail.com"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/padding_them_nhan_vien_left"
                android:textSize="@dimen/text_them_nhan_vien"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingStart="@dimen/padding_them_nhan_vien_left"
                android:text="Địa chỉ"
                android:textSize="@dimen/text_them_nhan_vien"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/MHSNV_edtDiaChiNhanVien"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/border"
                android:hint="Tân Phú"
                android:inputType="textMultiLine"
                android:paddingStart="@dimen/padding_them_nhan_vien_left"
                android:textSize="@dimen/text_them_nhan_vien"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingStart="@dimen/padding_them_nhan_vien_left"
                android:text="SĐT"
                android:textSize="@dimen/text_them_nhan_vien"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/MHSNV_edtSoDienThoaiNhanVien"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/border"
                android:hint="0795159786"
                android:inputType="number"
                android:paddingStart="@dimen/padding_them_nhan_vien_left"
                android:textSize="@dimen/text_them_nhan_vien"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingStart="@dimen/padding_them_nhan_vien_left"
                android:text="CMND"
                android:textSize="@dimen/text_them_nhan_vien"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/MHSNV_edtCMNDNhanVien"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/border"
                android:hint="0402033901"
                android:inputType="number"
                android:paddingStart="@dimen/padding_them_nhan_vien_left"
                android:textSize="@dimen/text_them_nhan_vien"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingStart="@dimen/padding_them_nhan_vien_left"
                android:text="Lương căn bản"
                android:textSize="@dimen/text_them_nhan_vien"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/MHSNV_edtLuongNhanVien"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/border"
                android:hint="9.000.000"
                android:inputType="number"
                android:paddingStart="@dimen/padding_them_nhan_vien_left"
                android:textSize="@dimen/text_them_nhan_vien"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/MHSNV_btnNhapMoi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_button"
            android:layout_weight="1"
            android:backgroundTint="#03A9F4"
            android:text="Xóa hết" />
        <Button
            android:id="@+id/MHSNV_btnThemNhanVien"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_button"
            android:layout_weight="1"
            android:backgroundTint="#03A9F4"
            android:text="SỬA" />
    </LinearLayout>

</LinearLayout>