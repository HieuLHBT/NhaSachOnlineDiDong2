<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemQLDH_NV"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="7dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/itemQLDH_NV_llCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="  Mã đơn hàng"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/itemQLDH_NV_txtMaDonHang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="  Trạng thái đơn hàng "
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/itemQLDH_NV_txtTrangThaiDonHang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemQLDH_NV_txtThoiGian"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/itemQLDH_NV_txtNgay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:visibility="gone"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.45"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:paddingRight="8dp"
                android:paddingLeft="8dp">

                <Button
                    android:id="@+id/itemQLDH_NV_btnChiTietDon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Chi tiết đơn"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/darker_gray"
                    android:textSize="18dp"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:id="@+id/itemQLDH_NV_btnGiaoHang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:text="Giao hàng"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/darker_gray"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.45"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:paddingRight="8dp"
                android:paddingLeft="8dp">

                <Button
                    android:id="@+id/itemQLDH_NV_btnThongBaoHuy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Thông báo huỷ"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/darker_gray"
                    android:textSize="18dp"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:id="@+id/itemQLDH_NV_btnHuyDon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:text="Huỷ đơn"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/darker_gray"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>