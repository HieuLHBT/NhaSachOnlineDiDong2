<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".activity.ThongTinKhachHangActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center">
        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_error"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/marginleft"
            android:layout_weight="0.7">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Họ Tên:"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/layoutTTKH_tvHoTen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.8"
                android:gravity="center|left"
                android:text="Trương Đình Thọ"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize"></TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/marginleft"
            android:layout_weight="0.7">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Email:"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/layoutTTKH_tvEmail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center|left"
                android:text="tho123@gmail.com"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/marginleft"
            android:layout_weight="0.7">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Số điện thoại:"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/layoutTTKH_tvSoDienThoai"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="038904852"
                android:inputType="number"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/marginleft"
            android:layout_weight="0.7">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="Tên ngân hàng:"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/layoutTTKH_tvTenNganHang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4"
                android:gravity="center|left"
                android:text="Vietcombank"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/marginleft"
            android:layout_weight="0.7">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center|left"
                android:text="Số TK ngân hàng:"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/layoutTTKH_tvSTKNganHang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="center|left"
                android:text="0382000711224"
                android:inputType="number"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/marginleft"
            android:layout_weight="1.2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Địa chỉ:"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/layoutTTKH_tvDiaChi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="3.8"
                android:text="145 QL 13, p Hiệp Bình Chánh, TP Thủ Đức, TP HCM"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/layoutTTKH_btnDoiMatKhau"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/le"
                android:text="Đổi mật khẩu"/>
            <Button
                android:id="@+id/layoutTTKH_btnThayDoiThongTin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/le"
                android:text="Thay đổi thông tin"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>